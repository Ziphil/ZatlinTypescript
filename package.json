{
  "name": "zatlin",
  "version": "1.2.2",
  "author": "Ziphil",
  "description": "TypeScript implementation of Zatlin, a domain specific language to generate words of a constructed langauge",
  "homepage": "https://github.com/Ziphil/TypescriptZatlin",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "develop": "ts-node source/index.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepare": "tsc"
  },
  "eslintConfig": {
    "extends": "ziphil",
    "rules": {
      "@typescript-eslint/quotes": "off",
      "import/order": "off"
    }
  },
  "jest": {
    "testMatch": [
      "<rootDir>/test/**/*.(ts|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "verbose": true
  },
  "devDependencies": {
    "@types/codemirror": "0.0.98",
    "@types/jest": "^26.0.15",
    "@types/parsimmon": "^1.10.3",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "eslint": "^7.15.0",
    "eslint-config-ziphil": "^1.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^30.7.8",
    "jest": "^26.6.1",
    "ts-jest": "^26.4.2",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.0.0",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "codemirror": "^5.58.2",
    "parsimmon": "^1.16.0"
  }
}
